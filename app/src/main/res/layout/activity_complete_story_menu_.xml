<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="example.vasilevs.animals_2.CompleteStoryMenu_Activity"
    android:background="@drawable/learn_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rlMenu_height"
        android:id="@+id/rlMenu">

        <ImageView
            android:layout_width="@dimen/rlMenu_height"
            android:layout_height="match_parent"
            android:id="@+id/IV_GoHomeS"
            android:src="@drawable/home"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <ImageView
            android:layout_width="@dimen/rlMenu_height"
            android:layout_height="match_parent"
            android:id="@+id/IV_SetS"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/settings_01"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp" />

        <ImageView
            android:layout_width="@dimen/rlMenu_height"
            android:layout_height="match_parent"
            android:id="@+id/IV_BackS"
            android:layout_marginLeft="50dp"
            android:background="@drawable/back"/>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/rlStars"
            android:background="@drawable/learn_stars_v2"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/IV_SetS"
            android:layout_toStartOf="@+id/IV_SetS"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="225"
                android:id="@+id/TV_CountStars"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rlMenu"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/IV_Story_FirstSnow"
                android:layout_weight="1"
                android:src="@drawable/learn_stories_blocks_firstsnow"
                android:padding="3dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/IV_Story_ChristmasThree"
                android:layout_weight="1"
                android:src="@drawable/learn_stories_blocks_elka"
                android:padding="3dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/IV_Story_Birthday"
                android:layout_weight="1"
                android:src="@drawable/learn_stories_blocks_hb"
                android:padding="3dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/IV_Story_Easter"
                android:layout_weight="1"
                android:src="@drawable/learn_stories_blocks_easter"
                android:padding="3dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/IV_Story_Mushrooms"
                android:layout_weight="1"
                android:src="@drawable/learn_stories_blocks_mushrooms"
                android:padding="3dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/IV_Story_HouseCleaning"
                android:layout_weight="1"
                android:src="@drawable/learn_stories_blocks_cleaning"
                android:padding="3dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
