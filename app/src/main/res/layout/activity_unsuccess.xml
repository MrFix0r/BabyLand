<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/unsuccess">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/IV_Repeat"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/unsuccess_restart"/>
    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/IV_SetS"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="450dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/unsuccess_menu"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ОЙ..."
        android:id="@+id/textView9"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="30dp"
        android:textColor="#c7d823" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="не получилось..."
        android:id="@+id/textView10"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="50dp"
        android:textColor="#c0dc1b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="может попробуешь\n       ещё разок?"
        android:id="@+id/textView11"
        android:layout_marginLeft="213dp"
        android:layout_marginTop="80dp"
        android:textColor="#c7d947"
        android:textSize="17dp" />
</RelativeLayout>