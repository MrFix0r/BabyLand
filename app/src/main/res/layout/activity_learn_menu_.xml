<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="example.vasilevs.animals_2.StudyMainMenu_Activity"
    android:background="@drawable/learn_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rlMenu_height"
        android:id="@+id/rlMenu">

        <ImageView
            android:layout_width="@dimen/rlMenu_height"
            android:layout_height="match_parent"
            android:id="@+id/IV_GoHomeS"
            android:src="@drawable/home"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <ImageView
            android:layout_width="@dimen/rlMenu_height"
            android:layout_height="match_parent"
            android:id="@+id/IV_SetS"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/settings_01"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp" />

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/rlStars"
            android:background="@drawable/learn_stars_v2"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/IV_SetS"
            android:layout_toStartOf="@+id/IV_SetS"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="225"
                android:id="@+id/TV_CountStars"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlMenu"
        android:id="@+id/rlMain"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageViewCompleteStory"
                android:src="@drawable/learn_blocks_stories"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:layout_margin="3dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageViewWhereYouLive"
                android:src="@drawable/learn_blocks_place"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:layout_margin="3dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageViewHowYouSound"
                android:src="@drawable/learn_blocks_speaking"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:layout_margin="3dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/IV_HintStory"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:src="@drawable/learn_question" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/IV_HintPlace"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:src="@drawable/learn_question" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/IV_HintSpeaking"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:src="@drawable/learn_question" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
