<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/settings"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.fix0r.babyland.mainsettingsactivity">


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CB_music"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="190dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="75dp"
        android:layout_alignParentEnd="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CB_sound"
        android:layout_below="@+id/CB_music"
        android:layout_alignLeft="@+id/CB_music"
        android:layout_alignStart="@+id/CB_music"
        android:layout_marginTop="81dp"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ОБ ИГРЕ"
        android:id="@+id/textView2"
        android:layout_marginRight="130dp"
        android:layout_marginEnd="97dp"
        android:layout_alignBottom="@+id/CB_music"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#469c08"
        android:textSize="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ПОМОЩЬ"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/CB_sound"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:textColor="#469c08"
        android:textSize="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ВВЕДИ СВОЕ ИМЯ"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView3"


        android:layout_marginTop="10dp"
        android:layout_marginLeft="190dp"
        android:textColor="#469c08"
        android:textSize="23dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView10"
        android:background="@drawable/settings_music"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="120dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView12"
        android:background="@drawable/settings_sound"
        android:layout_alignRight="@+id/imageView10"
        android:layout_alignEnd="@+id/imageView10"
        android:layout_marginTop="180dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OK"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#e93636" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/imageView13"
        android:background="@drawable/settings_blockname"
        android:layout_below="@+id/textView5"

        android:layout_marginLeft="185dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Имя"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/textView5"

        android:layout_marginLeft="185dp"
        android:textColor="#e93636" />

</RelativeLayout>
