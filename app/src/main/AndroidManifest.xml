            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name=".catch_game"
            android:label="Catch_game"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name=".games_menu"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name=".Success_for_catch_Activity"
